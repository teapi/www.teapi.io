*
  margin 0
  padding 0

body, input, select
  font 300 16px Open Sans, Verdana, Arial

strong
  font-weight 600

a
  color #2574A9
  text-decoration none
  border-bottom 1px solid transparent
  &:hover
    color #22313F

ul
  list-style none

h2
  color #555
  margin-bottom 20px

h3
  color #555
  font-size 16px

p
  line-height 1.5em
  margin-bottom 20px
  &.indent
    padding-left 50px

.content, .section
  width 90%
  max-width 1300px
  padding 0 10px
  margin 0 auto
  overflow auto

.section
  margin-top 40px

.button
  padding 6px 12px
  border-radius 4px
  background #52b3d9
  color #fff
  border none
  cursor pointer
  &:hover
    color #fff
    background #1288d8
    box-shadow 0 0 6px #666

#top
  background #52b3d9
  height 40px
  a
    line-height 40px
    color #fff
    font-size 14px
    float left
    font-weight 600
    &:hover
      color #fff
      text-decoration none
  #signin
    float right
    &:hover
      color #222
      text-decoration underline

#nav
  font-size 14px
  margin 40px 0
  overflow auto
  ul
    float right
  li
    float left
  a
    color #333
    display inline-block
    margin-left 30px
    border-bottom 1px solid transparent
    &:hover
      color #52b3d9
      border-color #52b3d9

#hero
  background #f6f6f6 url('cubes.png')
  min-height 220px
  overflow auto
  padding 25px 0
  #cta
    max-width 550px
    font-weight 600
    float left
  h1
    font-size 2.3em
    line-height 1.5em
    color #444
    text-transform uppercase
    margin-bottom 30px
    color #444
  img
    float right
    max-width 100%

#about, #features, #pricing, #mailing
  width 50%
  float left
  box-sizing border-box

#about, #pricing
  float left
  padding-right 30px

#features, #mailing
  padding-left 30px

#features
  h3:not(:first-of-type)
    margin-top 20px

#pricing
  float left
  & > div
    color #fff
    width 200px
    float left
    position relative
    text-align center
    margin-right 5px
    border-radius 4px
    height 300px
    h3
      color #fff
      padding 8px 0
      border-top-left-radius 4px
      border-top-right-radius 4px
      background rgba(0, 0, 0, 0.1)
      border-bottom 1px solid #555
    h4
      padding 60px 0
    .note
      font-size 14px
    p
      padding 4px 10px
    & > a
      left 0
      bottom 0
      padding 10px 0
      position absolute
      width 100%
      color #fff
      font-weight bold
      font-variant small-caps
      border-top 1px solid #999
      border-bottom-right-radius 4px
      border-bottom-left-radius 4px
      background rgba(255, 255, 255, 0.1)
    & > a:hover
      background rgba(22, 22, 22, 0.3)
#free
  background #6C7A89

#feedback
  width 225px !important
  background #f0f0f0
  h3, a, p
    color #444 !important

#mailing
  #mce-EMAIL
    padding 6px
    border-radius 4px
    width 300px
    border 1px solid #ccc
    margin-bottom 20px

#footer
  clear both
  margin-top 80px
  background #52b3d9
  font-size 16px
  padding 20px 0
  ul
    float right
  li
    float left
  a
    color #fff
    padding-bottom 2px
    margin-left 40px
    display inline-block
    &:hover
      border-color #fff

#tos
  float right
  margin-bottom 20px
  overflow auto
  div
    width 300px
    text-align center
    padding 7px
    background #C8F7C5
    border 1px solid #90C695
    border-radius 4px

